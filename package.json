{
  "name": "collaborative-code-editor",
  "version": "1.0.0",
  "description": "Real-time collaborative code editor with React, Socket.IO, and Monaco Editor",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --workspace=server",
    "client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
